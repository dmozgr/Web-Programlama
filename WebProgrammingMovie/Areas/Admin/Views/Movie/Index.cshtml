@model IEnumerable<WebProgrammingMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="color:white">Filmler</h3>

<p>
    <a style="color:cornflowerblue" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Review)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.View)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.SliderPhotoURL)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.DetailPhotoURL)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.IMDB)
            </th>
            <th style="color:white">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.View)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.Director.Id)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.SliderPhotoURL)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.DetailPhotoURL)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.IMDB)
            </td>
            <td style="color:white">
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a style="color: cornflowerblue" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="color: cornflowerblue" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a style="color: cornflowerblue" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
