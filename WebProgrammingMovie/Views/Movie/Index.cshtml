@model WebProgrammingMovie.Models.MovieRating
@using WebProgrammingMovie.Enum

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" data-setbg="@Model._Movie.DetailPhotoURL">
                        <div class="comment"><i class="fa fa-comments"></i> @Model._Movie.Rating.Count()</div>
                        <div class="view"><i class="fa fa-eye"></i> @Model._Movie.View</div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@Model._Movie.Name</h3>
                            <span>@Model._Movie.Director</span>
                        </div>
                        <div class="anime__details__rating">
                            <div class="rating">
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star-half-o"></i></a>
                            </div>
                            <span>1.029 Votes</span>
                        </div>
                        <p>
                            @Model._Movie.Review
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Çıkış Tarihi:</span> @Model._Movie.ReleaseDate.Year</li>
                                        <li><span>Kategori:</span> @Model._Movie.Category.Name</li>
                                        <li><span>İzlenme:</span> @Model._Movie.View</li>
                                    </ul>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Skor:</span> 7.5</li>
                                        <li><span>IMDB:</span> @Model._Movie.IMDB</li>
                                        <li><span>Süre:</span> @Model._Movie.Duration Saat</li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="anime__details__btn">
                            <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Follow</a>
                            <a href="#" class="watch-btn">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <div class="anime__details__review">
                    <div class="section-title">
                        <h5>Yorumlar</h5>
                    </div>
