            <div class="col-lg-3">
                <div class="trending__product">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-title">
                                <h4>Oyuncular</h4>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        @{ foreach (var item in Model._Movie.Actor)
                            {
                                <div class="col-lg-12">
                                    <div class="product__item">
                                        <div class="product__item__pic set-bg" data-setbg="@Model._Movie.DetailPhotoURL">
                                            <div class="ep">35</div>
                                        </div>
                                        <div class="product__item__text">
                                            <h5><a asp-controller="Movie" asp-action="Index" asp-route-id="@item.Id">@item.ActorName</a></h5>
